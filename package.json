    "postinstall": "prisma generate",
    "setup": "npm install && npm run prisma:setup"
  },
  "keywords": [
    "electron",
    "desktop-pet",
    "pokemon",
    "mascot",
    "react",
    "prisma",
    "tailwind"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "electron-store": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-react": "^7.24.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "css-loader": "^6.11.0",
    "electron": "^31.7.7",
    "postcss": "^8.4.47",
    "postcss-loader": "^7.3.4",
    "prisma": "^5.20.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.14",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
