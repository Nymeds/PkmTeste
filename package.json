{
  "name": "pokemon-desktop-pet",
  "version": "2.0.0",
  "description": "Pokémon Desktop Pets com sistema de níveis e experiência",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "webpack --mode production",
    "prisma:generate": "prisma generate",
