// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Pokémon capturado (inventário geral)
model Pokemon {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique @default(uuid())
  name      String
  level     Int      @default(1)
  xp        Int      @default(0)
  hp        Int
  maxHp     Int
  attack    Int
  defense   Int
  speed     Int
  createdAt DateTime @default(now())
  
  // Relação com slot do time (opcional)
  teamSlot  TeamSlot?
}

// Slot do time (máximo 6, apenas 3 renderizados)
model TeamSlot {
  id         Int     @id @default(autoincrement())
  slotNumber Int     @unique // 1-6
  pokemonId  Int     @unique
  pokemon    Pokemon @relation(fields: [pokemonId], references: [id], onDelete: Cascade)
  
  @@index([slotNumber])
}

// Estado do jogo (singleton)
model GameState {
  id              Int      @id @default(autoincrement())
  starterChosen   Boolean  @default(false)
  starterPokemon  String?
  lastPlayed      DateTime @default(now())
}