generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Pokemon {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  isStarter   Boolean  @default(false)
  level       Int      @default(1)
  xp          Int      @default(0)
  hp          Int
  maxHp       Int
  attack      Int
  defense     Int
  speed       Int
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())

  teamSlots TeamSlot[]
}

model TeamSlot {
  id        Int      @id @default(autoincrement())
  slot      Int
  pokemonId Int
  pokemon   Pokemon  @relation(fields: [pokemonId], references: [id])
}
